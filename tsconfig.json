{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
      "@api": [
        "app/api"
      ],
      "@state/*": [
        "app/state/*"
      ],
      "@state": [
        "app/state/index"
      ],
      "@models": [
        "app/api/models"
      ],
      "@components/*": [
        "app/components/*"
      ],
      "@shared/*": [
        "app/shared/*"
      ],
      "@helpers": [
        "app/api/helpers"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",    
    "jest",
    "src/setupTests.ts"
  ]
}
